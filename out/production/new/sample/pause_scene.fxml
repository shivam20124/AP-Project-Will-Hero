<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PauseScene">
    <children>
        <ImageView fitHeight="411.0" fitWidth="718.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../back_color.jpg" />
            </image>
        </ImageView>
        <Button fx:id="resume" layoutX="78.0" layoutY="85.0" mnemonicParsing="false" onAction="#resume" prefHeight="40.0" prefWidth="114.0" style="-fx-background-color: black;" text="Resume" textFill="WHITE">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
        <Button fx:id="save" layoutX="69.0" layoutY="162.0" mnemonicParsing="false" onAction="#save_game" prefHeight="40.0" prefWidth="133.0" style="-fx-background-color: black;" text="Save Game" textFill="WHITE">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
        <Button fx:id="exit" layoutX="69.0" layoutY="239.0" mnemonicParsing="false" onAction="#exit" prefHeight="40.0" prefWidth="133.0" style="-fx-background-color: black;" text="Exit Game" textFill="WHITE">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
